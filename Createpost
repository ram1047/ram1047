import requests
from requests.auth import HTTPBasicAuth

# WordPress site URL
wordpress_site_url = 'https://techclick.in'

# Endpoint for creating posts
endpoint = 'https://techclick.in/wp-json/wp/v2/posts'

# Your WordPress username
username = 'dixitra20@gmail.com'

# Your WordPress application password
password = 'KPaF RAdf O46K KPiA Xq49 TtYH'

# Post data
post_data = {
    'title': 'Your Post Title',
    'content': 'Your post content generated by ChatGPT.',
    'status': 'publish'  # or 'draft'
}

# Send POST request with authentication
response = requests.post(endpoint, json=post_data, auth=HTTPBasicAuth(username, password))

if response.status_code == 201:
    print('Post created successfully')
else:
    print('Failed to create post:', response.content)
